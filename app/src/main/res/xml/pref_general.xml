<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="@string/pref_locaton_key"
        android:defaultValue="@string/pref_locaton_defaultvalue"
        android:title="@string/pref_locaton_title"
        android:inputType="text"
        android:singleLine="true">
    </EditTextPreference>

    <ListPreference
        android:key="@string/pref_units_key"
        android:title="@string/pref_units_title"
        android:entries="@array/pref_units_options"
        android:entryValues="@array/pref_units_values"
        android:defaultValue="@string/pref_units_defaultvalue"
        >
    </ListPreference>

</PreferenceScreen>