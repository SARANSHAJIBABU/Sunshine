<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sunshine.saran.com.sunshine" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="sunshine.saran.com.sunshine.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="sunshine.saran.com.sunshine.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sunshine.saran.com.sunshine.MainActivity" />
        </activity>

        <activity
            android:name="sunshine.saran.com.sunshine.SettingsActivity"
            android:label="@string/title_activity_setting"
            android:parentActivityName="sunshine.saran.com.sunshine.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sunshine.saran.com.sunshine.MainActivity" />
        </activity>
    </application>

</manifest>
